{% extends 'crud_base.html.twig' %}

{% block title %}Ressource{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <div class="admin-page-header">
        <h1 class="admin-title">Ressource</h1>
        <div class="admin-actions">
            <a class="btn btn-outline" href="{{ path('app_ressource_index') }}">Retour</a>
            <a class="btn btn-primary" href="{{ path('app_ressource_edit', {'id': ressource.id}) }}">Modifier</a>
        </div>
    </div>

    <table class="admin-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ressource.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ ressource.titre }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ ressource.categorie ? ressource.categorie.nom : '' }}</td>
            </tr>
            <tr>
                <th>Chapitre</th>
                <td>{{ ressource.chapitre ? ressource.chapitre.titre : '' }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>
                    {% set kind = ressource.categorie ? ressource.categorie.nom|lower : '' %}
                    {% set isUrl = ressource.contenu starts with 'http://' or ressource.contenu starts with 'https://' %}
                    {% if isUrl %}
                        <a href="{{ ressource.contenu }}" target="_blank" rel="noopener">{{ ressource.contenu }}</a>
                    {% elseif kind == 'pdf' %}
                        <a href="{{ asset(ressource.contenu) }}" target="_blank" rel="noopener">Ouvrir le PDF</a>
                    {% else %}
                        {{ ressource.contenu }}
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Disponible le</th>
                <td>{{ ressource.availableAt ? ressource.availableAt|date('Y-m-d H:i') : '-' }}</td>
            </tr>
            <tr>
                <th>Vues</th>
                <td>{{ ressource.nbVues }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ ressource.nbLikes }}</td>
            </tr>
            <tr>
                <th>Favoris</th>
                <td>{{ ressource.nbFavoris }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ ressource.score }}</td>
            </tr>
            <tr>
                <th>Badge</th>
                <td>{{ ressource.badge }}</td>
            </tr>
        </tbody>
    </table>

    <div style="display:flex; gap:8px; margin-bottom:14px;">
        <form method="post" action="{{ path('app_ressource_like', {'id': ressource.id}) }}">
            <button class="btn btn-outline small">{{ is_liked ? 'Retirer Like' : 'Like' }}</button>
        </form>
        <form method="post" action="{{ path('app_ressource_favori', {'id': ressource.id}) }}">
            <button class="btn btn-primary small">{{ is_favori ? 'Retirer Favori' : 'Favori' }}</button>
        </form>
    </div>

    {{ include('ressource/_delete_form.html.twig') }}
{% endblock %}
