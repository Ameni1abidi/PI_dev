<div class="forum-show-container">

    <div class="forum-card">
        <h2>{{ forum.titre }}</h2>
        <p>{{ forum.contenu }}</p>

        <form method="post" action="{{ path('app_forum_like', {'id': forum.id}) }}">
            <button class="btn btn-outline small">❤️ {{ forum.likes }}</button>
        </form>
    </div>

    <h3>Commentaires</h3>

    {% for commentaire in forum.commentaires %}
        <div class="forum-comment">
            {{ commentaire.contenu }}
        </div>
    {% else %}
        <p>Aucun commentaire.</p>
    {% endfor %}

    <div class="forum-card">
        <h4>Ajouter un commentaire</h4>
        {{ form_start(form) }}
            {{ form_row(form.contenu) }}
            <button class="btn btn-primary">Publier</button>
        {{ form_end(form) }}
    </div>

</div>
