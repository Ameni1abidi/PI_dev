<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Forum</title>
    <link rel="stylesheet" href="{{ asset('parent/css/parent.css') }}">

    <style>
        .forum-container { padding:40px; max-width:1100px; margin:auto; }
        .forum-header { display:flex; justify-content:space-between; margin-bottom:30px; }

        .forum-card {
            background:white;
            padding:25px;
            border-radius:14px;
            box-shadow:0 6px 18px rgba(0,0,0,0.06);
            margin-bottom:25px;
        }

        .forum-title { font-size:20px; font-weight:600; }
        .forum-meta { font-size:13px; color:gray; margin-bottom:15px; }
        .forum-content { margin-bottom:15px; }

        .forum-actions {
            margin-bottom:15px;
        }

        .edit-btn {
            background:#4f46e5;
            color:white;
            padding:6px 12px;
            border-radius:6px;
            text-decoration:none;
            font-size:13px;
        }

        .delete-btn-forum {
            background:#dc3545;
            color:white;
            border:none;
            padding:6px 12px;
            border-radius:6px;
            font-size:13px;
            cursor:pointer;
        }

        .comment-section {
            margin-top:15px;
            padding-top:15px;
            border-top:1px solid #eee;
        }

        .comment-box {
            background:#f8f9fa;
            padding:12px;
            border-radius:8px;
            margin-bottom:10px;
            position:relative;
        }

        .comment-date {
            font-size:12px;
            color:gray;
            margin-bottom:5px;
        }

        .comment-edit {
            position:absolute;
            top:8px;
            right:80px;
            background:#f59e0b;
            color:white;
            padding:4px 8px;
            border-radius:6px;
            font-size:11px;
            text-decoration:none;
        }

        .comment-delete {
            position:absolute;
            top:8px;
            right:8px;
            background:#dc3545;
            color:white;
            border:none;
            padding:4px 8px;
            border-radius:6px;
            font-size:11px;
            cursor:pointer;
        }

        .comment-form textarea {
            width:100%;
            border-radius:8px;
            padding:8px;
            border:1px solid #ddd;
            margin-bottom:8px;
        }

        .comment-form button {
            background:#4f46e5;
            color:white;
            border:none;
            padding:6px 12px;
            border-radius:6px;
            cursor:pointer;
        }

        .btn-primary-custom {
            background:#4f46e5;
            color:white;
            padding:8px 15px;
            border-radius:8px;
            text-decoration:none;
        }
    </style>
</head>

<body>

<div class="forum-container">

    <div class="forum-header">
        <h1>Forum</h1>
        <a href="{{ path('app_forum_new') }}" class="btn-primary-custom">
            Créer un sujet
        </a>
    </div>

    {% if forums is empty %}
        <div class="forum-card">
            Aucun sujet disponible.
        </div>
    {% else %}

        {% for forum in forums %}
            <div class="forum-card">

                <div class="forum-title">
                    {{ forum.titre }}
                </div>

                <div class="forum-meta">
                    Type : {{ forum.type }} |
                    Créé le {{ forum.dateCreation|date('d/m/Y H:i') }}
                </div>

                <div class="forum-content">
                    {{ forum.contenu }}
                </div>

                <!-- ACTIONS FORUM -->
                <div class="forum-actions">
                    <a href="{{ path('app_forum_edit', {'id': forum.id}) }}" class="edit-btn">
                        Modifier
                    </a>

                    <form method="post"
                          action="{{ path('app_forum_delete', {'id': forum.id}) }}"
                          style="display:inline;"
                          onsubmit="return confirm('Supprimer ce sujet ?');">
                        <button type="submit" class="delete-btn-forum">
                            Supprimer
                        </button>
                    </form>
                </div>

                <!-- COMMENTAIRES -->
                <div class="comment-section">
                    <h4>Commentaires</h4>

                    {% if forum.commentaires|length == 0 %}
                        <p style="color:gray;">Aucun commentaire.</p>
                    {% else %}
                        {% for commentaire in forum.commentaires %}
                            <div class="comment-box">

                                <div class="comment-date">
                                    {{ commentaire.dateEnvoi|date('d/m/Y H:i') }}
                                </div>

                                <div>
                                    {{ commentaire.contenu }}
                                </div>

                                <!-- Modifier commentaire -->
                                <a href="{{ path('app_commentaire_edit', {'id': commentaire.id}) }}"
                                   class="comment-edit">
                                   Modifier
                                </a>

                                <!-- Supprimer commentaire -->
                                <form method="post"
                                      action="{{ path('app_commentaire_delete', {'id': commentaire.id}) }}"
                                      onsubmit="return confirm('Supprimer ce commentaire ?');">

                                    <button type="submit" class="comment-delete">
                                        Supprimer
                                    </button>

                                </form>

                            </div>
                        {% endfor %}
                    {% endif %}

                    <!-- AJOUT COMMENTAIRE -->
                    <form method="post" class="comment-form">
                        <input type="hidden" name="forum_id" value="{{ forum.id }}">
                        <textarea name="contenu" rows="3" placeholder="Écrire un commentaire..." required></textarea>
                        <button type="submit">Commenter</button>
                    </form>

                </div>

            </div>
        {% endfor %}

    {% endif %}

</div>

</body>
</html>
