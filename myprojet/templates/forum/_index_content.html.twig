<div class="forum-container">

    <div class="forum-header">
        <div>
            <h1>Forum</h1>
            <div class="forum-meta">Discussions de la communaute</div>
        </div>
        <a href="{{ path(forum_routes.new, forum_route_params) }}" class="btn btn-primary">
            Creer un sujet
        </a>
    </div>

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {% if forums is empty %}
        <div class="forum-card">
            Aucun sujet disponible.
        </div>
    {% else %}

        <div class="forum-grid">
        {% for forum in forums %}
            <div class="forum-card">

                <div class="forum-title">
                    {{ forum.titre }}
                </div>

                <div class="forum-meta">
                    Type : {{ forum.type }} |
                    Cree le {{ forum.dateCreation|date('d/m/Y H:i') }}
                </div>

                <div class="forum-content">
                    {{ forum.contenu }}
                </div>

                <div class="forum-actions">
                    <a href="{{ path(forum_routes.edit, forum_route_params|merge({'id': forum.id})) }}" class="btn btn-outline small">
                        Modifier
                    </a>

                    <form method="post"
                          action="{{ path(forum_routes.delete, forum_route_params|merge({'id': forum.id})) }}"
                          style="display:inline;"
                          onsubmit="return confirm('Supprimer ce sujet ?');">
                        <button type="submit" class="btn btn-danger small">
                            Supprimer
                        </button>
                    </form>
                </div>

                <div class="comment-section">
                    <h4>Commentaires</h4>

                    {% if forum.commentaires|length == 0 %}
                        <p class="comment-empty">Aucun commentaire.</p>
                    {% else %}
                        {% for commentaire in forum.commentaires %}
                            {% set isAiComment = commentaire.contenu starts with '[Bot IA] ' %}
                            <div class="comment-box" data-comment-id="{{ commentaire.id }}">

                                <div class="comment-date">
                                    {{ commentaire.dateEnvoi|date('d/m/Y H:i') }}
                                    {% if isAiComment %}
                                        | Assistant IA
                                    {% endif %}
                                </div>

                                <div>
                                    {% if isAiComment %}
                                        {{ commentaire.contenu|replace({'[Bot IA] ': ''}) }}
                                    {% else %}
                                        {{ commentaire.contenu }}
                                    {% endif %}
                                </div>
                                {% if not isAiComment %}
                                    <div class="comment-translate" data-translate-url="{{ path(forum_routes.comment_translate, forum_route_params|merge({'id': commentaire.id})) }}">
                                        <select class="comment-translate-select" aria-label="Choisir une langue">
                                            <option value="">Traduire...</option>
                                            <option value="fr">Francais</option>
                                            <option value="en">English</option>
                                            <option value="es">Espanol</option>
                                            <option value="de">Deutsch</option>
                                            <option value="it">Italiano</option>
                                            <option value="ar">Arabic</option>
                                        </select>
                                        <div class="comment-translation-result" hidden></div>
                                    </div>
                                    <div class="comment-reactions" data-comment-id="{{ commentaire.id }}"></div>

                                    <a href="{{ path(forum_routes.comment_edit, forum_route_params|merge({'id': commentaire.id})) }}"
                                       class="comment-edit">
                                       Modifier
                                    </a>

                                    <form method="post"
                                          action="{{ path(forum_routes.comment_delete, forum_route_params|merge({'id': commentaire.id})) }}"
                                          onsubmit="return confirm('Supprimer ce commentaire ?');">

                                        <button type="submit" class="comment-delete">
                                            Supprimer
                                        </button>

                                    </form>
                                {% endif %}

                            </div>
                        {% endfor %}
                    {% endif %}

                    <form method="post" class="comment-form">
                        <input type="hidden" name="forum_id" value="{{ forum.id }}">
                        <textarea name="contenu" rows="3" placeholder="Ecrire un commentaire..." required></textarea>
                        <button type="submit">Commenter</button>
                    </form>

                </div>

            </div>
        {% endfor %}
        </div>

    {% endif %}

</div>

<script defer src="{{ asset('dist/forum-emoji.js') }}"></script>
<script>
document.addEventListener('change', async function (event) {
    const select = event.target.closest('.comment-translate-select');
    if (!select) {
        return;
    }

    const wrapper = select.closest('.comment-translate');
    if (!wrapper) {
        return;
    }

    const result = wrapper.querySelector('.comment-translation-result');
    const target = select.value;

    if (!target) {
        result.textContent = '';
        result.hidden = true;
        return;
    }

    result.hidden = false;
    result.textContent = 'Traduction...';

    try {
        const response = await fetch(wrapper.dataset.translateUrl, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({ target: target })
        });

        const data = await response.json();
        if (!response.ok || !data.success) {
            throw new Error(data.message || 'Erreur de traduction.');
        }

        result.textContent = 'üåç ' + data.translatedText;
    } catch (e) {
        result.textContent = 'Erreur de traduction.';
    }
});
</script>
