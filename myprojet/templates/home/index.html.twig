                    <div class="auth-switch">
                      <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublie ?</a>
                    </div>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <label class="auth-check-wrap">
                        <input class="auth-check" type="checkbox" name="_remember_me"> Se souvenir de moi
                      </label>
                      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <button type="submit" id="form-submit" class="orange-button">Se connecter</button>
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <fieldset>
                      <a href="{{ path('connect_google_start') }}" class="orange-button" style="display:inline-block;text-align:center;">Continuer avec Google</a>
                    </fieldset>
                  </div>
                  <div class="col-lg-12">
                    <p class="auth-switch">
                      Pas de compte ? <a href="{{ path('app_register') }}">Creer un compte</a>
                    </p>
                  </div>
                </div>
              </form>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>

