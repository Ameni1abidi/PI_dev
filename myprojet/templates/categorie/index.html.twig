{% extends 'crud_base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <div class="admin-page-header">
        <h1 class="admin-title">Catégories</h1>
        <div class="admin-actions">
            <a class="btn btn-primary" href="{{ path('app_categorie_new') }}">Créer</a>
        </div>
    </div>

    <table class="admin-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.nom }}</td>
                <td>
                    <a class="btn btn-outline small" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">Voir</a>
                    <a class="btn btn-primary small" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
