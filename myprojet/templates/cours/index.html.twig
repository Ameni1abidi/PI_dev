{% extends 'enseignant/dashboard_base.html.twig' %}

{% block title %}Mes Cours{% endblock %}

{% block body %}
<div style="padding:20px; font-family: 'Manrope', sans-serif;">

  {# ğŸ”¹ Formulaire de recherche en haut #}
  <div style="margin-bottom:20px;">
    <form method="get" style="display:flex; gap:10px; align-items:center;">
      <input type="text" name="search" placeholder="Rechercher un cours" 
             value="{{ app.request.query.get('search') }}" 
             style="flex:1; padding:8px 12px; border-radius:8px; border:1px solid #ccc;">
      <button type="submit" 
              style="padding:8px 16px; background-color:#007bff; color:white; border:none; border-radius:8px; cursor:pointer;">
        ğŸ” Rechercher
      </button>
    </form>
  </div>

  {# ğŸ”¹ Bouton Ajouter Cours en dessous Ã  droite #}
  <div style="margin-bottom:20px; display:flex; justify-content:flex-end;">
    <a href="{{ path('app_cours_new') }}" 
       style="
           display:inline-block;
           padding:10px 20px;
           background-color:#ff4081;
           color:white;
           text-decoration:none;
           border-radius:50px;
           font-weight:700;
           font-size:1rem;
           box-shadow:0 3px 8px rgba(0,0,0,0.2);
           transition:0.3s;
       ">
       Ajouter Cours
    </a>
  </div>

  {# Liste des cours #}
  {% if cours is not empty %}
    <div style="display:grid; grid-template-columns:repeat(auto-fill, minmax(250px, 1fr)); gap:20px;">
      {% for cour in cours %}
        <div style="background-color:#f9f9f9; border-radius:10px; padding:15px; box-shadow:0 2px 8px rgba(0,0,0,0.1); display:flex; flex-direction:column; justify-content:space-between; height:220px;">
          <div>
            <div style="font-weight:700; font-size:1.2rem; margin-bottom:5px;">{{ cour.titre }}</div>
            {% if cour.description %}
              <div style="font-size:0.9rem; color:#555; margin-bottom:10px;">{{ cour.description }}</div>
            {% endif %}
            <div style="font-size:0.8rem; color:#999;">
              - CrÃ©Ã© le {{ cour.dateCreation ? cour.dateCreation|date('d/m/Y') : 'N/A' }}
            </div>
          </div>

          <div style="margin-top:auto; display:flex; flex-wrap:wrap; gap:5px;">
            <a href="{{ path('app_cours_edit', {'id': cour.id}) }}" 
               style="background-color:rgba(0,123,255,0.2); color:#007bff; font-size:0.75rem; padding:4px 10px; border-radius:12px; text-decoration:none; font-weight:600;">
               Modifier
            </a>
            <form method="post" action="{{ path('app_cours_delete', {'id': cour.id}) }}" 
                  onsubmit="return confirm('Voulez-vous vraiment supprimer ce cours ?');" style="display:inline-block;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cour.id) }}">
                <button type="submit" 
                        style="background-color:rgba(220,53,69,0.2); color:#dc3545; border:none; border-radius:12px; padding:4px 10px; font-size:0.75rem; font-weight:600; cursor:pointer;">
                  Supprimer
                </button>
            </form>
            <a href="{{ path('app_chapitre_index', {'coursId': cour.id}) }}" 
               style="background-color:rgba(40,167,69,0.2); color:#28a745; font-size:0.75rem; padding:4px 10px; border-radius:12px; text-decoration:none; font-weight:600;">
               Ajouter des chapitres
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div style="text-align:center; margin-top:20px; padding:10px; background-color:#e9ecef; border-radius:5px;">
      Aucun cours disponible pour le moment.
    </div>
  {% endif %}

</div>
{% endblock %}






