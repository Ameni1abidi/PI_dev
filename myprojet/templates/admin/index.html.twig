{% extends 'scholar_base.html.twig' %}

{% block title %}Dashboard Admin - EduFlex{% endblock %}

{% block stylesheets %}
  {{ parent() }}
{% endblock %}

{% block body %}
  <div id="js-preloader" class="js-preloader">
    <div class="preloader-inner">
      <span class="dot"></span>
      <div class="dots">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  </div>

  <header class="header-area header-sticky">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav class="main-nav">
            <a href="{{ path('app_home') }}" class="logo"><h1>Eduflex</h1></a>
            <ul class="nav">
              <li><a class="active" href="{{ path('app_admin') }}">Dashboard</a></li>
              <li><a href="{{ path('app_forum_index_context', {'context': 'admin'}) }}">Forum</a></li>
              <li><a href="{{ path('app_utilisateur_index') }}">Utilisateurs</a></li>
              <li><a href="{{ path('app_utilisateur_new') }}">Ajouter user</a></li>
              <li><a href="{{ logout_path() }}">Logout</a></li>
            </ul>
            <a class="menu-trigger"><span>Menu</span></a>
          </nav>
        </div>
      </div>
    </div>
  </header>

  <div class="main-banner" id="top">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="owl-carousel owl-banner">
            <div class="item item-1">
              <div class="header-text">
                <span class="category">Administration</span>
                <h2>Pilotez la plateforme EduFlex</h2>
                <p>Gerez les utilisateurs, suivez les activites et coordonnez les espaces de l'ecole.</p>
                <div class="buttons">
                  <div class="main-button"><a href="{{ path('app_utilisateur_new') }}">Ajouter utilisateur</a></div>
                  <div class="icon-button"><a href="{{ path('app_utilisateur_index') }}"><i class="fa fa-users"></i> Voir users</a></div>
                </div>
              </div>
            </div>
            <div class="item item-2">
              <div class="header-text">
                <span class="category">Moderation</span>
                <h2>Suivez les echanges</h2>
                <p>Accedez rapidement au forum admin pour moderer les discussions.</p>
                <div class="buttons">
                  <div class="main-button"><a href="{{ path('app_forum_index_context', {'context': 'admin'}) }}">Acceder forum</a></div>
                </div>
              </div>
            </div>
            <div class="item item-3">
              <div class="header-text">
                <span class="category">Vue globale</span>
                <h2>Un dashboard centralise</h2>
                <p>Rassemblez les operations essentielles dans une interface unique.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="services section">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-6">
          <div class="service-item">
            <div class="icon"><img src="{{ asset('images/service-01.png') }}" alt="users"></div>
            <div class="main-content">
              <h4>Utilisateurs</h4>
              <p>Consulter la liste complete des comptes de la plateforme.</p>
              <div class="main-button"><a href="{{ path('app_utilisateur_index') }}">Ouvrir</a></div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="service-item">
            <div class="icon"><img src="{{ asset('images/service-02.png') }}" alt="forum"></div>
            <div class="main-content">
              <h4>Forum Admin</h4>
              <p>Verifier les discussions et intervenir si necessaire.</p>
              <div class="main-button"><a href="{{ path('app_forum_index_context', {'context': 'admin'}) }}">Moderer</a></div>
            </div>
          </div>
        </div>
        <div class="col-lg-4 col-md-6">
          <div class="service-item">
            <div class="icon"><img src="{{ asset('images/service-03.png') }}" alt="new"></div>
            <div class="main-content">
              <h4>Creation rapide</h4>
              <p>Ajouter un nouveau compte utilisateur en un clic.</p>
              <div class="main-button"><a href="{{ path('app_utilisateur_new') }}">Creer</a></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    (function () {
      function hidePreloader() {
        var preloader = document.getElementById('js-preloader');
        if (preloader) preloader.classList.add('loaded');
      }
      window.addEventListener('load', hidePreloader);
      setTimeout(hidePreloader, 1500);
    })();
  </script>
{% endblock %}
