{% extends 'crud_base.html.twig' %}

{% block title %}Détail résultat{% endblock %}

{% block body %}
  <h1 class="h3 mb-4">Résultat #{{ resultat.id }}</h1>
  <table class="table table-bordered bg-white">
    <tbody>
      <tr><th>Note</th><td>{{ resultat.note }}</td></tr>
      <tr><th>Appréciation</th><td>{{ resultat.appreciation }}</td></tr>
      <tr><th>Élève ID</th><td>{{ resultat.eleveId }}</td></tr>
      <tr><th>Examen</th><td>{{ resultat.examen ? resultat.examen.titre : '' }}</td></tr>
    </tbody>
  </table>
  <div class="d-flex align-items-center gap-2">
    <a class="btn btn-link" href="{{ path('app_resultat_index') }}">Retour à la liste</a>
    <a class="btn btn-outline-primary" href="{{ path('app_resultat_edit', {'id': resultat.id}) }}">Éditer</a>
    {{ include('resultat/_delete_form.html.twig', {resultat: resultat}) }}
  </div>
{% endblock %}
