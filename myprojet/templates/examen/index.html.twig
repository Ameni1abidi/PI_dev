{% extends 'crud_base.html.twig' %}

{% block title %}Examens{% endblock %}

{% block body %}
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Examens</h1>
    <a class="btn btn-primary" href="{{ path('app_examen_new') }}">Creer un examen</a>
  </div>

  {% if examens is empty %}
    <div class="alert alert-info">Aucun examen.</div>
  {% else %}
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Titre</th>
            <th>Fichier</th>
            <th>Type</th>
            <th>Date</th>
            <th>Duree</th>
            <th>Cours</th>
            <th>Enseignant</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for examen in examens %}
            <tr>
              <td>{{ examen.id }}</td>
              <td>{{ examen.titre }}</td>
              <td>
                {% if examen.contenu %}
                  <a href="{{ asset('uploads/examens/' ~ examen.contenu) }}" target="_blank">Telecharger</a>
                {% endif %}
              </td>
              <td>{{ examen.type }}</td>
              <td>{{ examen.dateExamen ? examen.dateExamen|date('Y-m-d') : '' }}</td>
              <td>{{ examen.duree }}</td>
              <td>{{ examen.cours ? examen.cours.titre : '' }}</td>
              <td>{{ examen.enseignant ? examen.enseignant.nom : '' }}</td>
              <td class="text-end">
                <a class="btn btn-sm btn-outline-secondary" href="{{ path('app_examen_show', {'id': examen.id}) }}">Voir</a>
                <a class="btn btn-sm btn-outline-primary" href="{{ path('app_examen_edit', {'id': examen.id}) }}">Editer</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}
{% endblock %}
